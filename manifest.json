{
    "manifest_version": 2,
    "name": "Font Changer",
    "version": "1.0",
    "description": "Change fonts of web pages",
    "browser_action": {
      "default_popup": "modal.html"
    },
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ]
  }
  